{
  "name": "agent-trust-layer",
  "version": "0.1.0",
  "description": "Security and governance framework for AI agent operations. Trust gates, eval harnesses, approval workflows, and domain adapters.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/core/schemas.js",
      "types": "./dist/core/schemas.d.ts"
    },
    "./trust-gates": {
      "import": "./dist/core/trust-gates.js",
      "types": "./dist/core/trust-gates.d.ts"
    },
    "./orchestrator": {
      "import": "./dist/core/orchestrator.js",
      "types": "./dist/core/orchestrator.d.ts"
    },
    "./logger": {
      "import": "./dist/core/logger.js",
      "types": "./dist/core/logger.d.ts"
    },
    "./approvals": {
      "import": "./dist/core/approvals.js",
      "types": "./dist/core/approvals.d.ts"
    },
    "./commit-tools": {
      "import": "./dist/core/commit-tools.js",
      "types": "./dist/core/commit-tools.d.ts"
    },
    "./sandbox": {
      "import": "./dist/core/sandbox.js",
      "types": "./dist/core/sandbox.d.ts"
    },
    "./tool-router": {
      "import": "./dist/core/tool-router.js",
      "types": "./dist/core/tool-router.d.ts"
    },
    "./migrations": {
      "import": "./dist/migrations.js",
      "types": "./dist/migrations.d.ts"
    }
  },
  "files": [
    "dist",
    "migrations",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kauf3r/agent-trust-layer.git"
  },
  "bugs": {
    "url": "https://github.com/kauf3r/agent-trust-layer/issues"
  },
  "homepage": "https://github.com/kauf3r/agent-trust-layer#readme",
  "keywords": [
    "ai",
    "agent",
    "trust",
    "security",
    "governance",
    "llm",
    "anthropic",
    "claude"
  ],
  "author": "Andy Kaufman <kaufman@airspaceintegration.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "zod": "^3.23.0",
    "@supabase/supabase-js": "^2.0.0",
    "@anthropic-ai/sdk": "^0.30.0"
  },
  "peerDependenciesMeta": {
    "@supabase/supabase-js": {
      "optional": true
    },
    "@anthropic-ai/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@supabase/supabase-js": "^2.47.0",
    "@anthropic-ai/sdk": "^0.30.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0",
    "zod": "^3.24.0"
  }
}
